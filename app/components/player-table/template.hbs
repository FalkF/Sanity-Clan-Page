{{#light-table playerTable height='15vh' as |t|}}
  {{t.head}}

  {{#t.body as |body|}}
    {{#body.expanded-row as |row|}}
      Hello <b>{{row.firstName}}</b>
    {{/body.expanded-row}}

    {{#if isLoading}}
      loading
    {{/if}}

    {{#if table.isEmpty}}
      {{#body.no-data}}
        error loading data
      {{/body.no-data}}
    {{/if}}
  {{/t.body}}
{{/light-table}}
